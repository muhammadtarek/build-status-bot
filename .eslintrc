{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "plugins": ["import", "jsx-a11y", "react"],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-console": "warn",
    "semi": ["error", "always"],
    "radix": "off",
    "array-callback-return": "off",
    "consistent-return": "off"
  }
}
